<Window x:Class="WcfProxies.WindowsHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WcfProxies.WindowsHost"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnStartService" Content="Button" HorizontalAlignment="Left" Margin="255,107,0,0" VerticalAlignment="Top" Width="75" Click="btnStartService_Click"/>
        <Button x:Name="btnStopService" IsEnabled="False" Content="Button" HorizontalAlignment="Left" Margin="255,168,0,0" VerticalAlignment="Top" Width="75" Click="btnStopService_Click"/>
        <Label x:Name="lblStatus" Content="Label" HorizontalAlignment="Left" Margin="255,219,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
